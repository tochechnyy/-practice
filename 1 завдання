#include <stdio.h>

int main() {
    int t1, t2, t3;
    float total_time;

    // Введення часів гостей
    printf("Введіть часи для гостей (через пробіл): ");
    scanf("%d %d %d", &t1, &t2, &t3);

    // Обчислення загального часу
    total_time = 1.0 / t1 + 1.0 / t2 + 1.0 / t3;

    // Виведення результату
    printf("Гості разом зможуть з'їсти пиріг за %.2f годин\n", 1 / total_time);

    return 0;
}
